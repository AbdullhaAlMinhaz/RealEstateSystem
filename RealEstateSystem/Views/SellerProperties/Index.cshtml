@model RealEstateSystem.ViewModels.SellerPropertyListViewModel
@using RealEstateSystem.Models

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@{
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}

<style>
    .table-actions {
        display: flex;
        justify-content: flex-end;
        gap: 8px;
        flex-wrap: wrap;
    }

    .table-link,
    .table-link-danger,
    .table-link-success {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 0.82rem;
        font-weight: 500;
        border: none;
        cursor: pointer;
        text-decoration: none;
        white-space: nowrap;
    }

    .table-link {
        background: #eef2ff;
        color: #4f46e5;
    }

        .table-link:hover {
            background: #e0e7ff;
        }

    .table-link-danger {
        background: #fee2e2;
        color: #b91c1c;
    }

        .table-link-danger:hover {
            background: #fecaca;
        }

    .table-link-success {
        background: #dcfce7;
        color: #166534;
    }

        .table-link-success:hover {
            background: #bbf7d0;
        }

    .inline-form {
        display: inline-block;
        margin: 0;
    }

    /* Your existing delete button class compatibility */
    .btn-table.btn-danger.btn-small {
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 0.82rem;
        font-weight: 500;
        border: none;
        cursor: pointer;
        background: #fee2e2;
        color: #b91c1c;
    }

        .btn-table.btn-danger.btn-small:hover {
            background: #fecaca;
        }
</style>

<main class="content">
    <section class="card">
        <div class="card-header">
            <h2>@Model.Title</h2>
            <a asp-action="Create" class="card-link">Add new property</a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Commission</th>
                    <th>Approval</th>
                    <th>Price</th>
                    <th>Created</th>
                    <th style="text-align:right;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Properties != null && Model.Properties.Any())
                {
                    foreach (var p in Model.Properties)
                    {
                        <tr>
                            <td>@p.Title</td>
                            <td>@p.PropertyType</td>
                            <td>@p.Status</td>

                            @* ✅ Commission Status Column *@
                            <td>
                                @if (p.CommissionInvoice == null)
                                {
                                    <span>-</span>
                                }
                                else
                                {
                                    <span>@p.CommissionInvoice.Status</span>
                                }
                            </td>

                            <td>@p.ApprovalStatus</td>
                            <td>BDT @p.Price.ToString("N2")</td>
                            <td>@p.CreatedDate.ToString("dd MMM yyyy")</td>

                            <td>
                                <div class="table-actions">

                                    <a asp-action="Details"
                                       asp-route-id="@p.PropertyId"
                                       class="table-link">
                                        View
                                    </a>

                                    <a asp-action="Edit"
                                       asp-route-id="@p.PropertyId"
                                       class="table-link">
                                        Edit
                                    </a>

                                    @* ✅ Mark as Sold button (only for Available properties) *@
                                    @if (p.Status == PropertyStatus.Available)
                                    {
                                        <form asp-controller="SellerProperties"
                                              asp-action="MarkAsSold"
                                              asp-route-id="@p.PropertyId"
                                              method="post"
                                              style="display:inline;"
                                              onsubmit="return confirm('Mark this property as SOLD? This will lock the price and hide it from buyers.');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="table-link-success">
                                                Mark as Sold
                                            </button>
                                        </form>
                                    }

                                    @* ✅ Pay with SSLCOMMERZ (Unpaid or Rejected) *@
                                    @if (p.CommissionInvoice != null &&
                                                                (p.CommissionInvoice.Status == CommissionInvoiceStatus.Unpaid ||
                                                                p.CommissionInvoice.Status == CommissionInvoiceStatus.Rejected))
                                    {
                                        <form asp-controller="SSLCommerz"
                                              asp-action="Init"
                                              method="post"
                                              style="display:inline;"
                                              onsubmit="return confirm('Proceed to SSLCOMMERZ payment gateway?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="invoiceId" value="@p.CommissionInvoice.CommissionInvoiceId" />
                                            <button type="submit" class="table-link-success">
                                                Pay (SSLCOMMERZ)
                                            </button>
                                        </form>
                                    }

                                    @* ✅ Receipt button (only when Paid) *@
                                    @if (p.CommissionInvoice != null &&
                                                                p.CommissionInvoice.Status == CommissionInvoiceStatus.Paid)
                                    {
                                        <a asp-controller="SellerCommission"
                                           asp-action="Receipt"
                                           asp-route-id="@p.CommissionInvoice.CommissionInvoiceId"
                                           class="table-link">
                                            Receipt
                                        </a>
                                    }

                                    <form asp-controller="SellerProperties"
                                          asp-action="Delete"
                                          asp-route-id="@p.PropertyId"
                                          method="post"
                                          style="display:inline;"
                                          onsubmit="return confirm('Are you sure you want to delete this property?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn-table btn-danger btn-small">Delete</button>
                                    </form>

                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8">You have not listed any properties yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</main>
