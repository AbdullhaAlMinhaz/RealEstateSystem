@model RealEstateSystem.ViewModels.SellerPropertyListViewModel

@{
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}

<style>
    .table-actions {
        display: flex;
        justify-content: flex-end;
        gap: 8px;
    }

    .table-link,
    .table-link-danger {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 4px 10px;
        border-radius: 999px;
        font-size: 0.82rem;
        font-weight: 500;
        border: none;
        cursor: pointer;
        text-decoration: none;
    }

    .table-link {
        background: #eef2ff;
        color: #4f46e5;
    }

        .table-link:hover {
            background: #e0e7ff;
        }

    .table-link-danger {
        background: #fee2e2;
        color: #b91c1c;
    }

        .table-link-danger:hover {
            background: #fecaca;
        }

    .inline-form {
        display: inline-block;
        margin: 0;
    }
</style>

<main class="content">
    <section class="card">
        <div class="card-header">
            <h2>@Model.Title</h2>
            <a asp-action="Create" class="card-link">Add new property</a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Approval</th>
                    <th>Price</th>
                    <th>Created</th>
                    <th style="text-align:right;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Properties != null && Model.Properties.Any())
                {
                    foreach (var p in Model.Properties)
                    {
                        <tr>
                            <td>@p.Title</td>
                            <td>@p.PropertyType</td>
                            <td>@p.Status</td>
                            <td>@p.ApprovalStatus</td>
                            <td>BDT @p.Price.ToString("N2")</td>
                            <td>@p.CreatedDate.ToString("dd MMM yyyy")</td>
                            <td>
                                <div class="table-actions">
                                    <a asp-action="Details"
                                       asp-route-id="@p.PropertyId"
                                       class="table-link">
                                        View
                                    </a>

                                    <a asp-action="Edit"
                                       asp-route-id="@p.PropertyId"
                                       class="table-link">
                                        Edit
                                    </a>

                                    <form asp-action="Delete"
                                          asp-route-id="@p.PropertyId"
                                          method="post"
                                          class="inline-form">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="table-link-danger"
                                                onclick="return confirm('Are you sure you want to delete this property?');">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">You have not listed any properties yet.</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</main>
