@model RealEstateSystem.ViewModels.AdminUserListViewModel
@{
    Layout = "_AdminLayout";
    var pageTitle = Model.Title ?? "Users";
    var pageSubtitle = Model.Subtitle ?? "Manage users.";
}

<section class="card">
    <div class="card-header">
        <div>
            <h2>@pageTitle</h2>
            <p class="card-subtitle">@pageSubtitle</p>
        </div>
        <input type="text" id="userSearch" class="table-search" placeholder="Search users..." />
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th style="width: 140px;">Actions</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                @foreach (var u in Model.Users)
                {
                    <tr>
                        <td>@u.UserId</td>
                        <td>@(u.FirstName + " " + u.LastName)</td>
                        <td>@u.Email</td>
                        <td>@u.Role</td>
                        <td>@u.PhoneNumber</td>
                        <td>
                            <span class="badge @(u.IsActive ? "badge-active" : "badge-disabled")">
                                @(u.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>@u.CreatedDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <a asp-controller="AdminUsers"
                               asp-action="Edit"
                               asp-route-id="@u.UserId"
                               class="btn-table">
                                Edit
                            </a>

                            <form asp-controller="AdminUsers"
                                  asp-action="Delete"
                                  asp-route-id="@u.UserId"
                                  method="post"
                                  style="display:inline;"
                                  onsubmit="return confirm('Are you sure you want to delete this user?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn-table btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

@section Scripts {
    <script>
        // simple client-side search
        document.getElementById('userSearch')?.addEventListener('input', function (e) {
            const q = e.target.value.toLowerCase();
            document.querySelectorAll('#userTableBody tr').forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(q) ? '' : 'none';
            });
        });
    </script>
}
