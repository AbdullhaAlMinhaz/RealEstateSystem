@model RealEstateSystem.ViewModels.AdminUserEditViewModel
@{
    Layout = "_AdminLayout";
}

<section class="card">
    <div class="card-header">
        <div>
            <h2>Edit User</h2>
            <p class="card-subtitle">Update user information and status.</p>
        </div>
    </div>

    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserId" />

            <div class="form-grid">
                <div class="auth-field">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="auth-field">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="auth-field">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="auth-field">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="auth-field">
                    <label asp-for="Role"></label>
                    <select asp-for="Role" asp-items="Html.GetEnumSelectList<RealEstateSystem.Models.UserRole>()">
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="auth-field">
                    <label>
                        <input asp-for="IsVerified" />
                        Verified
                    </label>
                </div>

                <div class="auth-field">
                    <label>
                        <input asp-for="IsActive" />
                        Active
                    </label>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
