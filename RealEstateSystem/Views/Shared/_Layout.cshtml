@{
    var title = ViewData["Title"] ?? "EstateFlow – Real Estate Property Listing & Selling System";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <link rel="icon" type="image/jpeg" href="~/images/Favicon.jpg" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />


</head>
<body class="@(ViewData["BodyClass"] ?? "")">


    <!-- HEADER / NAVBAR (from your index.html) -->
    <header>
        <div class="container navbar">
            <!-- Brand / Logo -->
            <div class="logo">
                <div class="logo-icon">RE</div>
                <div>
                    <div class="logo-title">EstateFlow</div>
                    <small class="logo-subtitle">Property Listing &amp; Selling System</small>
                </div>
            </div>

            <!-- Desktop nav + auth inside pill card -->
            <div class="nav-pill">
                <nav id="nav">
                    <ul class="nav-links">
                        <li><a href="@Url.Content("~")#home" class="nav-link active">Home</a></li>
                        <li><a href="@Url.Content("~")#properties" class="nav-link">Properties</a></li>
                        <li><a href="@Url.Content("~")#about-us" class="nav-link">About Us</a></li>
                        <li><a href="@Url.Content("~")#contact" class="nav-link">Contact Us</a></li>
                    </ul>
                </nav>

                <div class="auth-buttons">
                    @* <a asp-controller="Account" asp-action="Login" class="btn btn-ghost btn-sm">Login</a>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-sm">Registration</a> *@
                    <a href="#" class="btn btn-ghost btn-sm js-open-login">Login</a>
                    <a href="#" class="btn btn-primary btn-sm js-open-register">Registration</a>



                </div>
            </div>

            <!-- Mobile hamburger -->
            <button class="hamburger" id="hamburger" aria-label="Toggle navigation">
                <span></span>
                <span></span>
            </button>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    @RenderBody()

    <!-- FOOTER (from your index.html) -->
    <footer>
        <div class="container footer-inner">
            <p>© 2025 EstateFlow – Real Estate Property Listing &amp; Selling System</p>
        </div>
    </footer>

    <!-- JS -->
    <script src="~/js/script.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
