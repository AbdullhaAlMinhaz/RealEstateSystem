@model RealEstateSystem.ViewModels.SellerProfileViewModel
@{
    Layout = "_SellerLayout";  // or "_AdminLayout" if you use same layout
    ViewData["Title"] = "My Profile";
}

<style>
    body {
        background: #f3f4ff;
    }

    .profile-wrapper {
        max-width: 1100px;
        margin: 0 auto;
    }

    .profile-card {
        background: linear-gradient(135deg, #f9fbff, #eef2ff);
        border-radius: 20px;
        box-shadow: 0 24px 50px rgba(15, 23, 42, 0.12);
        padding: 2.5rem 2.5rem 2rem;
        text-align: center;
        margin-bottom: 1.75rem;
    }

    .profile-avatar {
        width: 96px;
        height: 96px;
        border-radius: 50%;
        margin: 0 auto 1.25rem;
        overflow: hidden;
        background: radial-gradient(circle at 30% 30%, #ffffff, #dbeafe);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.3rem;
        font-weight: 700;
        color: #1d4ed8;
    }

        .profile-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .profile-name {
        font-size: 1.35rem;
        font-weight: 700;
        color: #0f172a;
    }

    .profile-email {
        font-size: 0.95rem;
        color: #6b7280;
    }

    .badge-role {
        display: inline-flex;
        align-items: center;
        padding: 0.3rem 1rem;
        border-radius: 999px;
        background: rgba(59,130,246,0.08);
        color: #1d4ed8;
        font-size: 0.8rem;
        font-weight: 600;
        margin-top: 0.7rem;
    }

    .profile-divider {
        margin: 1.8rem 0 1.2rem;
        border-top: 1px solid rgba(148,163,184,0.3);
    }

    .profile-details-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        row-gap: 0.5rem;
        font-size: 0.9rem;
        text-align: left;
    }

    .profile-details-label {
        color: #6b7280;
    }

    .profile-details-value {
        font-weight: 500;
        color: #111827;
        text-align: right;
    }

    .badge-status {
        display: inline-flex;
        align-items: center;
        padding: 0.15rem 0.8rem;
        border-radius: 999px;
        font-size: 0.78rem;
        font-weight: 600;
    }

        .badge-status.active {
            background: #dcfce7;
            color: #166534;
        }

        .badge-status.inactive {
            background: #fee2e2;
            color: #b91c1c;
        }

    .profile-forms {
        display: grid;
        grid-template-columns: minmax(0, 1.4fr) minmax(0, 1fr);
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    @@media (max-width: 992px) {
        .profile-forms {
            grid-template-columns: minmax(0, 1fr);
        }
    }

    .card-form {
        background: #ffffff;
        border-radius: 18px;
        box-shadow: 0 16px 35px rgba(15, 23, 42, 0.08);
        padding: 1.75rem 1.75rem 1.5rem;
    }

        .card-form h5 {
            font-size: 1.02rem;
            font-weight: 600;
            margin-bottom: 0.3rem;
        }

        .card-form .text-muted {
            font-size: 0.86rem;
        }

    .form-label {
        font-weight: 500;
        font-size: 0.88rem;
        color: #374151;
    }

    .form-control,
    .form-select {
        border-radius: 999px;
        border-color: #e5e7eb;
        font-size: 0.9rem;
        padding-inline: 1rem;
    }

    textarea.form-control {
        border-radius: 12px;
        min-height: 70px;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 2px rgba(59,130,246,0.25);
    }

    .btn-soft-secondary {
        background: #e5e7eb;
        color: #374151;
        border: none;
    }

        .btn-soft-secondary:hover {
            background: #d1d5db;
            color: #111827;
        }

    .btn-primary {
        border-radius: 999px;
        padding-inline: 1.5rem;
        font-weight: 600;
    }

    .profile-image-note {
        font-size: 0.8rem;
        color: #6b7280;
    }
</style>

<div class="profile-wrapper">

    <!-- TOP CARD -->
    <div class="profile-card">
        <div class="profile-avatar">
            @if (!string.IsNullOrEmpty(Model.ProfilePhoto))
            {
                <img src="@Model.ProfilePhoto" alt="Profile photo" />
            }
            else
            {
                @((Model.FirstName ?? "S").Substring(0, 1).ToUpper())
            }
        </div>

        <div class="profile-name">
            @Model.FirstName @Model.LastName
        </div>
        <div class="profile-email">
            @Model.Email
        </div>

        <div class="badge-role">Seller</div>

        <div class="profile-divider"></div>

        <div class="profile-details-row">
            <div class="profile-details-label">Phone</div>
            <div class="profile-details-value">@Model.PhoneNumber</div>

            <div class="profile-details-label">Gender</div>
            <div class="profile-details-value">
                @(Model.Gender.HasValue? Model.Gender.Value.ToString() : "Not set")
            </div>

            <div class="profile-details-label">Date of birth</div>
            <div class="profile-details-value">
                @(Model.DateOfBirth.HasValue? Model.DateOfBirth.Value.ToString("dd MMM yyyy") : "Not set")
            </div>

            <div class="profile-details-label">Present address</div>
            <div class="profile-details-value">
                @(!string.IsNullOrWhiteSpace(Model.PresentAddress) ? Model.PresentAddress : "Not set")
            </div>

            <div class="profile-details-label">Account status</div>
            <div class="profile-details-value">
                <span class="badge-status @(Model.IsVerified ? "active" : "inactive")">
                    @(Model.IsVerified ? "Verified" : "Pending")
                </span>
            </div>

            <div class="profile-details-label">Registered on</div>
            <div class="profile-details-value">
                @(Model.RegisteredOn == default ? "" : Model.RegisteredOn.ToString("dd MMM yyyy"))
            </div>
        </div>
    </div>

    <!-- FORMS -->
    <div class="profile-forms">

        <!-- LEFT: PROFILE INFO -->
        <div class="card-form">
            <h5>Profile Information</h5>
            <p class="text-muted mb-3">Update your personal and agency details.</p>

            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="SellerId" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Gender" class="form-label"></label>
                        <select asp-for="Gender" class="form-select"
                                asp-items="Html.GetEnumSelectList<Gender>()">
                            <option value="">-- Select gender --</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="PresentAddress" class="form-label"></label>
                        <textarea asp-for="PresentAddress" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="PresentAddress" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="AgencyName" class="form-label"></label>
                        <input asp-for="AgencyName" class="form-control" />
                        <span asp-validation-for="AgencyName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="SellerType" class="form-label"></label>
                        <input asp-for="SellerType" class="form-control" />
                        @* or use a select if you have enum *@
                        <span asp-validation-for="SellerType" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="ProfileImageFile" class="form-label"></label>
                        <input asp-for="ProfileImageFile" type="file" class="form-control" />
                        <span class="profile-image-note">Upload a square JPG/PNG image for best result.</span>
                        <span asp-validation-for="ProfileImageFile" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="reset" class="btn btn-soft-secondary">Reset</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>

        <!-- RIGHT: SECURITY -->
        <div class="card-form">
            <h5>Security</h5>
            <p class="text-muted mb-3">Change your password and keep your account secure.</p>

            <form asp-action="UpdatePassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="UserId" />

                <div class="mb-3">
                    <label asp-for="CurrentPassword" class="form-label"></label>
                    <input asp-for="CurrentPassword" class="form-control" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmNewPassword" class="form-label"></label>
                    <input asp-for="ConfirmNewPassword" class="form-control" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">
                    Update Password
                </button>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (TempData["ProfileUpdated"] != null)
    {
        <script>alert('@TempData["ProfileUpdated"]');</script>
    }

    @if (TempData["PasswordUpdated"] != null)
    {
        <script>alert('@TempData["PasswordUpdated"]');</script>
    }
}
